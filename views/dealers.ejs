<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <h2>Manage Dealers</h2>
      <form action="/dealers/manage" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Dealer Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input type="text" class="form-control" id="country" name="country" required>
        </div>
        <div class="mb-3">
          <label for="averageInvoiceMaturityDays" class="form-label">Average Invoice Maturity Days</label>
          <input type="number" class="form-control" id="averageInvoiceMaturityDays" name="averageInvoiceMaturityDays" required>
        </div>
        <div class="mb-3">
          <label for="averageDeliveryTime" class="form-label">Average Delivery Time (days)</label>
          <input type="number" class="form-control" id="averageDeliveryTime" name="averageDeliveryTime" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
</html>